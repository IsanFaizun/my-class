<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="20dp"
    >

    <ImageView
        android:id="@+id/ic_person"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:src="@drawable/ic_person"
        />
    <TextView
        android:id="@+id/nama_mhs_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Nama Mahasiswa"
        android:textStyle="bold"
        android:layout_toRightOf="@id/ic_person"
        android:layout_alignTop="@id/ic_person"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp"
        />
    <TextView
        android:id="@+id/nim_mhs_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:textStyle="italic"
        android:layout_alignLeft="@id/nama_mhs_txt"
        android:layout_below="@id/nama_mhs_txt"
        android:text="NIM"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:id="@+id/ipk_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3.5"
        android:textSize="35dp"
        android:textStyle="bold"
        android:textColor="#128200"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginLeft="30dp"
        />


</RelativeLayout>